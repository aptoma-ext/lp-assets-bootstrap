	"templateOptions": {
		".theme--{theme}": {
			"title": "Theme",
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "string",
				"enum": [
					"default",
					"blue"
				],
				"enumNames": [
					"Default",
					"Blue"
				]
			}
		},
		"[data-map]": {
			"title": "Article types",
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "string",
				"enum": [
					"article"
				],
				"enumNames": [
					"All"
				]
			}
		}
	},
	"dividerOptions": {
		".divider--border-{alignment}": {
			"title": "Alignment",
			"type": "string",
			"enum": [
				"middle",
				"top",
				"bottom",
				"left",
				"right",
				"left-right",
				"none"
			],
			"enumNames": [
				"Middle",
				"Top",
				"Bottom",
				"Left",
				"Right",
				"Left/right",
				"None"
			]
		},
		".u-margin-top--{margin}": {
			"title": "Margin above",
			"type": "string",
			"enum": [
				"-2-lines",
				"-1-line",
				"0-lines",
				"1-line",
				"2-lines",
				"3-lines",
				"4-lines"
			],
			"enumNames": [
				"-2 lines",
				"-1 line",
				"None",
				"1 line",
				"2 lines",
				"3 lines",
				"4 lines"
			]
		}
	},
	"componentOptions": {
		"picture": {
			"title": "Picture",
			"type": "object",
			"properties": {
				".alf-is-auto-adjustable": {
					"title": "Auto size to fit body text",
					"type": "boolean"
				}
			}
		},
		"auto-size-text": {
			"title": "Auto size text",
			"type": "object",
			"properties": {
				".alf-text-auto-size": {
					"title": "Enabled",
					"type": "boolean"
				}
			}
		},
		"grid-align": {
			"title": "Grid alignment",
			"type": "object",
			"properties": {
				"--alf-grid-align-top": {
					"title": "Top alignment",
					"type": "string",
					"enum": [
						"top",
						"baseline",
						"none"
					],
					"enumNames": [
						"Ascender/top",
						"Baseline",
						"None"
					]
				},
				"--alf-grid-align-bottom": {
					"title": "Bottom alignment",
					"type": "string",
					"enum": [
						"top",
						"baseline",
						"none"
					],
					"enumNames": [
						"Ascender/top",
						"Baseline",
						"None"
					]
				}
			}
		},
		"grid-gap": {
			"title": "Grid gaps",
			"type": "object",
			"properties": {
				"--alf-grid-cell-gap-left": {
					"title": "Left",
					"type": "string",
					"enum": [
						"normal",
						"none"
					],
					"enumNames": [
						"Normal",
						"None"
					]
				},
				"--alf-grid-cell-gap-right": {
					"title": "Right",
					"type": "string",
					"enum": [
						"normal",
						"none"
					],
					"enumNames": [
						"Normal",
						"None"
					]
				}
			}
		},
		"margins": {
			"title": "Margins",
			"type": "object",
			"properties": {
				".u-margin-top--{margin}": {
					"title": "Above",
					"type": "string",
					"enum": [
						"-2-lines",
						"-1-line",
						"0-lines",
						"1-line",
						"2-lines",
						"3-lines",
						"4-lines"
					],
					"enumNames": [
						"-2 lines",
						"-1 line",
						"None",
						"1 line",
						"2 lines",
						"3 lines",
						"4 lines"
					]
				},
				".u-margin-bottom--{margin}": {
					"title": "Below",
					"type": "string",
					"enum": [
						"0-lines",
						"1-line",
						"2-lines",
						"3-lines",
						"4-lines"
					],
					"enumNames": [
						"None",
						"1 line",
						"2 lines",
						"3 lines",
						"4 lines"
					]
				}
			}
		},
		"shapes": {
			"title": "Shape",
			"type": "object",
			"properties": {
				"--shape": {
					"title": "Shape",
					"$ref": "#/definitions/shapes"
				}
			}
		},
		"box": {
			"title": "Box",
			"type": "object",
			"properties": {
				"--box-background-color": {
					"title": "Background color",
					"$ref": "#/definitions/colors",
					"x-layoutpreview": {
						"template": "var(--color-{value})"
					}
				},
				".rotate": {
					"title": "Rotate",
					"type": "boolean"
				}
			},
			"allOf": [
				{
					"if": {
						"properties": {".rotate": {"const": true}},
						"required": [".rotate"]
					},
					"then": {
						"properties": {
							"--rotation": {
								"title": "Degrees",
								"type": "integer",
								"minimum": -180,
								"maximum": 180,
								"x-layoutpreview": {
									"widget": "range",
									"template": "{value}deg"
								}
							}
						}
					}
				}
			]
		}
	}
}
